{
  "name": "d1-template",
  "description": "Cloudflare's native serverless SQL database.",
  "cloudflare": {
    "label": "Worker + D1 Database",
    "products": [
      "Workers",
      "D1"
    ],
    "categories": [
      "storage"
    ],
    "docs_url": "https://developers.cloudflare.com/d1/",
    "preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/6c63cca8-354a-4951-45a0-d58769ac6f00/public",
    "preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/aa6158f1-7711-4485-f134-a8c802c0a800/preview",
    "publish": true
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "typescript": "5.9.3",
    "wrangler": "4.63.0"
  },
  "private": true,
  "scripts": {
    "cf-typegen": "wrangler types",
    "check": "tsc && wrangler deploy --dry-run",
    "deploy": "npx wrangler deploy",
    "dev": "wrangler dev --local",
    "dev:remote": "wrangler dev --remote",
    "predeploy": "wrangler d1 migrations apply DB --remote",
    "migrate": "wrangler d1 migrations apply DB --local",
    "seed": "wrangler d1 execute DB --local --file=./seeds/seed.sql",
    "setup": "pnpm migrate && pnpm seed",
    "clean": "wrangler d1 execute DB --local --command=\"DELETE FROM prices; DELETE FROM daily_prices; DELETE FROM trades; DELETE FROM user_targets; DELETE FROM alerts; DELETE FROM reports;\""
  }
}
